<Window x:Class="UDPClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UDP Client" Height="350" Width="525">
    <Grid>
        <TextBox Name="MessageTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="25" Margin="10,10,10,0"/>
        <Button Name="SendButton" Content="Send" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Margin="420,10,10,0" Click="SendButton_Click"/>
        <TextBox Name="DialogBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="480" Height="200" Margin="10,40,10,0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
    </Grid>
</Window>
